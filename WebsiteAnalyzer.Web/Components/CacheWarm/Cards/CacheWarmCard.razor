@using WebsiteAnalyzer.Core.Contracts.CacheWarm

<RadzenCard>
    <RadzenRow>
        <RadzenStack>
            <RadzenText>Start Time</RadzenText>
            <RadzenText>@CacheWarm.StartTime</RadzenText>
        </RadzenStack>
        
        <RadzenStack>
            <RadzenText>Total Time</RadzenText>
            <RadzenText>@CacheWarm.TotalTime.ToString(@"hh\:mm\:ss") minutes</RadzenText>
        </RadzenStack>
        
        <RadzenStack>
            <RadzenText>Visited Pages</RadzenText>
            <RadzenText>@CacheWarm.VisitedPages</RadzenText>
        </RadzenStack>
        
        <RadzenStack>
            <RadzenText>Average TTFB</RadzenText>
            <RadzenText>@CacheWarm.AveragePageTimeMs ms</RadzenText>
        </RadzenStack>
    </RadzenRow>
</RadzenCard>


@code {
    [Parameter, EditorRequired] 
    public required AnonymousCacheWarm CacheWarm { get; set; }
}