@using WebsiteAnalyzer.Core.Entities
@using WebsiteAnalyzer.Core.Enums

<RadzenStack class="rz-mt-6">
    <RadzenDataGrid Data="ScheduledTasks"
                    AllowPaging="true"
                    PageSize="10"
                    EmptyText="No scheduled tasks">
        <Columns>
            <RadzenDataGridColumn Title="Website URL" Property="@nameof(ScheduledAction.Website.Url)"/>
            <RadzenDataGridColumn Title="Frequency" Property="@nameof(ScheduledAction.Frequency)">
                <Template Context="schedule">
                    @schedule.Frequency.ToFriendlyString()
                </Template>
            </RadzenDataGridColumn>
            <RadzenDataGridColumn Title="Action" Property="@nameof(ScheduledAction.Action)"/>
            <RadzenDataGridColumn Title="Status" Property="@nameof(ScheduledAction.Status)"/>
            <RadzenDataGridColumn Title="Last Check" Property="@nameof(ScheduledAction.LastCrawlDate)"/>
            <RadzenDataGridColumn>
                <Template Context="schedule">
                    <RadzenButton Icon="delete"
                                  ButtonStyle="ButtonStyle.Danger"
                                  Click="@(() => DeleteTask(schedule))"/>
                </Template>
            </RadzenDataGridColumn>
        </Columns>
    </RadzenDataGrid>
</RadzenStack>

@code {
    [Parameter] 
    public required ICollection<ScheduledAction> ScheduledTasks { get; set; }

    [Parameter] 
    public required EventCallback<ScheduledAction> OnScheduleDeleted { get; set; }

    private async Task DeleteTask(ScheduledAction schedule)
    {
        if (OnScheduleDeleted.HasDelegate)
        {
            await OnScheduleDeleted.InvokeAsync(schedule);
        }
    }

}