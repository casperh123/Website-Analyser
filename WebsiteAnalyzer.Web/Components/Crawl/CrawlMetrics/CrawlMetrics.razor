@using Core.Entities
@using WebsiteAnalyzer.Core.Enums

<RadzenStack class="rz-mt-6">
    <RadzenCardGroup>
        <RadzenCard>
            <RadzenText>Status:</RadzenText>
            <RadzenBadge BadgeStyle="BadgeStyle.Success">In Progress</RadzenBadge>
        </RadzenCard>
            
        <RadzenCard>
            <RadzenText>Links Checked:</RadzenText>
            <RadzenText>@LinksChecked</RadzenText>
        </RadzenCard>

        <RadzenCard>
            <RadzenText>Links Enqueued:</RadzenText>
            <RadzenText>@LinksEnqueued</RadzenText>
        </RadzenCard>
    </RadzenCardGroup>
</RadzenStack>

@code {

    [Parameter, EditorRequired]
    public required int LinksChecked { get; set; }

    [Parameter, EditorRequired]
    public required int LinksEnqueued { get; set; }
}