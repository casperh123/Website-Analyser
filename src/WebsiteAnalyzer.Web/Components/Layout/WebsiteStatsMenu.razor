@using WebsiteAnalyzer.Core.Domain.Website
<RadzenCard>
    <RadzenPanelMenu >
        <RadzenPanelMenuItem Text="General" Path="@($"/website/{Website.Id}")" Match="NavLinkMatch.All"/>
        <RadzenPanelMenuItem Text="Broken Links" Path="@($"/website/{Website.Id}/brokenlinks")" Match="NavLinkMatch.All"/>
        <RadzenPanelMenuItem Text="Cache Warms" Path="@($"/website/{Website.Id}/cachewarms")" Match="NavLinkMatch.All"/>
        <RadzenPanelMenuItem Text="Uptime" Path="@($"/website/{Website.Id}/uptime")" Match="NavLinkMatch.All"/>
    </RadzenPanelMenu>
</RadzenCard>

@code {
    [Parameter, EditorRequired]
    public required Website Website { get; set; }
}